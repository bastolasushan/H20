<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.basto.h2o.MainActivity">

    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
        android:id="@+id/circularFillableLoaders"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/logo"
        app:cfl_border="true"
        app:cfl_border_width="2dp"
        app:cfl_progress="145"
        app:cfl_wave_amplitude="0.06"
        app:cfl_wave_color="#9a09ffff" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/min_8_glass_of_waters_per_day"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/glass1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/btn1"
        android:layout_marginEnd="13dp"
        android:background="@drawable/glass2" />

    <ImageView
        android:id="@+id/finalbuble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nothing"
        android:scaleType="fitXY"
        android:src="@drawable/bubbles"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circularFillableLoaders"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:fontFamily="cursive"
        android:text="Milestone Reached!"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:text="You have drank total 2 litres of water "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible" />


</RelativeLayout>
